/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // Put you code here:
    HalfAdder(a=a, b=b, sum=x, carry=y1);
    HalfAdder(a=x, b=c, sum=sum, carry=y2);
    Or(a=y1, b=y2, out=carry);
}